page {
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: var(--main-BG);
  color: var(--main-color);
}

.card {
  width: 100%;
  padding: 20px;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 2px;
  overflow: hidden;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.card .title {
  text-align: left;
  font-weight: 400;
  font-size: 14px;
  color: gray;
  margin-bottom: 10px;
}

.tips-color {
  color: rgb(117, 117, 117);
}

.logo {
  width: 140rpx;
  height: 140rpx;
  line-height: 140rpx;
  font-size: 94rpx;
  text-align: center;
  color: #fff;
  background-color: var(--main-color);
  border-radius: 50%;
}

.center-center {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.clear-hover-button {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: transparent;
  padding: 0;
  margin: 0;
  border: 0;
  border-radius: 0;
  color: transparent;
}
.clear-hover-button::after {
  display: none;
}

.button {
  padding: 0 100rpx;
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 50rpx;
  overflow: hidden;
  text-align: center;
  color: #000;
  font-size: 14px;
}

.button-main {
  color: #fff;
  background-color: var(--main-color);
  box-shadow: 0 10px 20px 0 rgba(0, 0, 0, 0.2);
}

.flex-between {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.disable-color {
  color: rgba(0, 0, 0, 0.25);
}
