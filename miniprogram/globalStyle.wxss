.card {
  width: 100%;
  padding: 20px;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 2px;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.card .title {
  text-align: left;
  font-weight: 400;
  font-size: 14px;
  color: gray;
  margin-bottom: 10px;
}

.tips-color {
  color: rgb(117, 117, 117);
}

.logo {
  width: 140rpx;
  height: 140rpx;
  line-height: 140rpx;
  font-size: 94rpx;
  text-align: center;
  color: #fff;
  background-color: var(--main-color);
  border-radius: 50%;
}

.center-center {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.clear-hover-button {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: transparent;
  padding: 0;
  margin: 0;
  border: 0;
  border-radius: 0;
  color: transparent;
}
.clear-hover-button::after {
  display: none;
}
