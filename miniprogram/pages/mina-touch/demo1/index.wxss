page {
  width: 100%;
  height: 100%;
  padding: 0;
}
.box {
  position: relative;
  width: 300px;
  height: 100%;
  background-color: var(--main-color);
}
.box .tips {
  position: absolute;
  width: 100%;
  text-align: right;
  right: 20px;
  top: 50%;
  transform: translate(0, -50%);
  color: #fff;
  font-size: 16px;
}
