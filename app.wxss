@import './iconfont.wxss';

page {
  --main-color: #2c2c2c;
  --main-BG: #f8f8f8;
  color: var(--main-color);
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: var(--main-BG);
}

.logo {
  width: 140rpx;
  height: 140rpx;
  line-height: 140rpx;
  font-size: 94rpx;
  text-align: center;
  color: #fff;
  background-color: var(--main-color);
  border-radius: 50%;
}

.center-center {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.clear-hover-button {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: transparent;
  padding: 0;
  margin: 0;
  border: 0;
  border-radius: 0;
  color: transparent;
}
.clear-hover-button::after {
  display: none;
}

.reset-navigation-bar {
  position: relative;
  z-index: 99;
}
